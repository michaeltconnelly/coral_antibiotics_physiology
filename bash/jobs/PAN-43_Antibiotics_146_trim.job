#!/bin/bash
#BSUB -q general
#BSUB -J PAN-43_Antibiotics_146_trim
#BSUB -o "/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys"/outputs/logfiles/PAN-43_Antibiotics_146_trim.out
#BSUB -e "/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys"/outputs/errorfiles/PAN-43_Antibiotics_146_trim.err
module load java/1.8.0_60
echo Trimming PAN-43_Antibiotics_146
~/programs/bbmap/bbduk.sh -Xmx512m \
in=/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys/data/quantseq_reads/PAN-43_Antibiotics_146.fastq \
out=/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys/outputs/trimmed_reads/PAN-43_Antibiotics_146_trimmed.fastq \
ref=/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys/data/bbmap_resources/polyA.fa.gz,/scratch/projects/transcriptomics/mikeconnelly/projects/anti_phys/data/bbmap_resources/truseq_rna.fa.gz \
k=13 \
ktrim=r \
useshortkmers=T \
mink=5 \
qtrim=10 \
minlength=20
echo PAN-43_Antibiotics_146 successfully trimmed
